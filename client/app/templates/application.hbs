{{nav-bar afterLogin="afterLogin"}}

{{#if errorService.hasError}}
    <div style="opacity: 0.9; position: absolute; padding-top: 20px; left: 0; right: 0; margin-left: auto; margin-right:auto; width: 25%">
        <div class="alert alert-danger fade in" style="text-align: center">
            <a {{action "clearError"}} href="#" class="close" data-dismiss="alert" aria-label="close">
                <i class="fa fa-times" aria-hidden="true" style="padding-left: 10px"></i>
            </a>
            <strong>Error!: </strong>{{errorService.error}}
        </div>
    </div>
{{/if}}

<div class="container" style="z-index: -1;">
    {{#unless activeSession.isAuthenticated}}
        Please log in to create a new note!
    {{else}}
        {{outlet}}
    {{/unless}}
</div>
